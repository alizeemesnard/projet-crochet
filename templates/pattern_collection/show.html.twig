{% extends 'base.html.twig' %}

{% block title %} Collection de patrons n°{{ patternCollection.id }}{% endblock %}

  {% block body %}
      <h1>{{ patternCollection.Name }}</h1>

      <table class="table">
          <tbody>
            <tr>
                <th>Créateur</th>
                <td>{{ patternCollection.designer }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ patternCollection.dateCreated ? patternCollection.dateCreated|date('Y-m-d') : 'N/A' }}</td>
            </tr>
            <tr>
				<th>Patrons</th>
                <td>
                    <ul>
                        {% for pattern in patternCollection.patterns %}
                            <li>
   						   <a href="{{ path('app_crochet_pattern_show', {'id': pattern.id}) }}">{{ pattern }}</a> </li>
                        {% else %}
                            <li> Aucun patron dans cette collection ! </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
          </tbody>
      </table>

      <a href="{{ path('app_member_show', { 'id': patternCollection.designer.id }) }}"> Retour au membre {{ patternCollection.designer.email }} </a>
		  <br> <br>
      <a href="{{ path('app_crochet_pattern_new', {'id': patternCollection.id}) }}">Créer un nouveau patron</a>


  {% endblock %} {# body #} 
{# ... #}