{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <h1>{{ portfolio.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ portfolio.id }}</td>
            </tr>
            <tr>
                <th>Créateur</th>
                <td>{{ portfolio.member }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ portfolio.dateCreated ? portfolio.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre total de patrons</th>
                <td>{{ portfolio.totalPatterns }}</td>
            </tr>
            <tr>
				<th>Patrons</th>
                <td>
                    <ul>
                        {% for pattern in portfolio.patterns %}
                            <li>
   						   <a href="{{ path('app_portfolio_crochet_pattern_show', {'portfolio_id': portfolio.id, 'pattern_id': pattern.id}) }}">{{ pattern }}</a> </li>
                        {% else %}
                            <li> Aucun patron dans ce portfolio ! </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_portfolio_index') }}">Liste des portfolios</a>
    <br><br>
    <a href="{{ path('app_portfolio_edit', {'id': portfolio.id}) }}">Modifier ce portfolio</a>
    <br><br>
    {{ include('portfolio/_delete_form.html.twig') }}
{% endblock %}
