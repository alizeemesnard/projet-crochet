{% extends 'base.html.twig' %}

{% block title %}Liste des portfolios publics{% endblock %}

{% block body %}
    <h1>Liste des portfolios publics:</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de création</th>
                <th>Nombre de Patrons</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.id }}</td>
                <td>{{ portfolio.name }}</td>
                <td>{{ portfolio.dateCreated ? portfolio.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ portfolio.totalPatterns }}</td>
                <td>
                    <a href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}">voir</a>
                    <br>
                    <a href="{{ path('app_portfolio_edit', {'id': portfolio.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_portfolio_new') }}">Créez un nouveau portfolio</a>
{% endblock %}
